 static public void  perfectno(int n){
        int sum=1;
        for(int i=2;sum<=n;i++){
            if(n%i==0){
                sum+=i;
            }
            if(sum==n){
                System.out.println("This is an perfect number");
               return;
            }
        }
        System.out.println("Not a perfect number");

    }
